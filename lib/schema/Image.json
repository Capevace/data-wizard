{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.immo/Image",
  "title": "Image",
  "description": "An image",
  "type": "object",
  "properties": {
    "src": {
      "type": "string",
      "format": "uri",
      "description": "The URL of the image"
    },
    "thumbnail_src": {
      "type": "string",
      "format": "uri",
      "description": "The URL of a thumbnail of the image"
    },
    "alt": {
      "type": "string",
      "description": "A description of the image"
    }
  },
    "required": ["src"]
}